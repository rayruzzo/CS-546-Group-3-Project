<div class="dm-page">
  <div class="dm-container">

    <h2>Start a New Direct Message Thread</h2>

    <form method="POST" action="/dmthreads/create">

      <div class="field">
        <label for="recipient">Recipient Username:</label>
        <input 
          type="text" 
          id="recipient" 
          name="recipient" 
          required
          placeholder="please enter the respective username.."
        >
      </div>

      <div class="field">
        <label for="message">Initial Message:</label>
        <textarea 
          id="message" 
          name="message" 
          required 
          placeholder="Enter message here.."
        ></textarea>
      </div>

      {{#if error}}
        <p class="error">{{error}}</p>
      {{/if}}

      <button type="submit">Start Thread</button>
    </form>

  </div>
</div>