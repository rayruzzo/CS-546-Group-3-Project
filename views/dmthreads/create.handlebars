<div class="dm-page">
  <div class="dm-container">

    <h2>Start a New Direct Message Thread</h2>

    <form method="POST" action="/dmthreads/create">

      <div class="field">
        <label>User 1:</label>
        <input type="text" name="user1" required>
      </div>

      <div class="field">
        <label>User 2:</label>
        <input type="text" name="user2" required>
      </div>

      <button type="submit">Create Thread</button>
    </form>

  </div>
</div>